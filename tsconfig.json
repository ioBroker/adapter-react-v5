{
    "include": ["./src"],
    "compilerOptions": {
        "module": "esnext",
        "target": "esnext",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "checkJs": false,
        "noEmit": false,
        "declaration": true,
        "sourceMap": true,
        "inlineSources": true,
        "resolveJsonModule": true,
        "outDir": "./build",
        "baseUrl": "./",
        "sourceRoot": "./src",
        "noImplicitAny": true,
        "skipLibCheck": true,
        "lib": ["es2018", "DOM"],
        "jsx": "react",
        "types": ["@iobroker/types"]
    }
}
